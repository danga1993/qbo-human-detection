<launch>
  <arg name="mono_camera_side" />
  <arg name="mono_camera_device" />

  <node pkg="uvc_camera" type="uvc_camera_node" ns="stereo/$(arg mono_camera_side)" name="uvc_camera">
    <param name="width" type="int" value="320" />
    <param name="height" type="int" value="240" />
    <param name="device" type="string" value="$(arg mono_camera_device)" />
    <param name="fps" type="int" value="30" />
    <param name="camera_info_url" type="string" value="package://qbo_description/calibrations/$(arg mono_camera_side)-camera.yaml" />
  </node>
</launch>
